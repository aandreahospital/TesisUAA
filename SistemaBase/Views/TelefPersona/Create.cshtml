
@model SistemaBase.Models.TelefPersona

@{
    ViewData["Title"] = "Create";
    Layout = "";
    string namecheck = "";
}

<div class="modal fade " id="detailsModal" tabindex="-1" aria-labelledby="detailsModallLabel" style="display: none;" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">TelefPersona</h5>
                <button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close" id="editmodal"><svg class="svg-inline--fa fa-xmark fs--1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="xmark" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" data-fa-i2svg=""><path fill="currentColor" d="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z"></path></svg><!-- <span class="fas fa-times fs--1"></span> Font Awesome fontawesome.com --></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" id="FormModalCreate" onsubmit="submitforms(event,'Create', 'FormModalCreate')" class="mb-0">
                    <div class="row g-0 mt-0 mb-0">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label asp-for="CodPersona" class="form-control-label fs-0 subTitleModal "></label>
                                </div>
                                <div class="col-8">
                                    <div class="form-check fromCheckSelect">
                                        <div style="max-width: 350px;">
                                            <input class="form-control" asp-for="CodPersona" required />
                                            <span asp-validation-for="CodPersona" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal " required asp-for="CodigoArea"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" asp-for="CodigoArea" />
                                    <span asp-validation-for="CodigoArea" class="text-danger k-invalid-msg" data-for="CodigoArea"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal " required asp-for="NumTelefono"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" asp-for="NumTelefono" />
                                    <span asp-validation-for="NumTelefono" class="text-danger k-invalid-msg" data-for="NumTelefono"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal " asp-for="TipTelefono"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" asp-for="TipTelefono" />
                                    <span asp-validation-for="TipTelefono" class="text-danger k-invalid-msg" data-for="TipTelefono"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal " asp-for="TelUbicacion"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" asp-for="TelUbicacion" />
                                    <span asp-validation-for="TelUbicacion" class="text-danger k-invalid-msg" data-for="TelUbicacion"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal " asp-for="Interno"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" asp-for="Interno" type="number" />
                                    <span asp-validation-for="Interno" class="text-danger k-invalid-msg" data-for="Interno"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal " asp-for="Nota"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" asp-for="Nota" />
                                    <span asp-validation-for="Nota" class="text-danger k-invalid-msg" data-for="Nota"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal " asp-for="PorDefecto"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" asp-for="PorDefecto" />
                                    <span asp-validation-for="PorDefecto" class="text-danger k-invalid-msg" data-for="PorDefecto"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label asp-for="CodDireccion" class="form-control-label fs-0 subTitleModal "></label>
                                </div>
                                <div class="col-8">
                                    <div class="form-check fromCheckSelect">
                                        <div style="max-width: 350px;">
                                            <select asp-for="CodDireccion" asp-items="ViewBag.CodDireccion" class="form-select ps-4" data-choices="data-choices" data-options='{"removeItemButton":true,"placeholder":true}'>
                                            </select>
                                            <span asp-validation-for="CodDireccion" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="">
                                <input type="hidden" asp-for="Rowid" />
                            </div>
                        </div>

                        <div class="text-center" id="loader_inv" style="visibility: hidden;">
                            <div class="spinner-border" role="status">
                                <span class="sr-only"></span>
                            </div>
                        </div>

                    </div>





                    <div class="modal-footer">
                        <button class="btnAbm" type="submit">
                            <span class="btn-label"><i class="fa fa-save"></i></span> Guardar
                        </button>

                        <button class="btnAbmCancelar" type="button" data-bs-dismiss="modal">
                            <span class="btn-label"><i class="fa fa-remove"></i></span> Cancelar
                        </button>
                    </div>



                </form>






            </div>
        </div>
    </div>
</div>

