@model SistemaBase.Models.Usuario



        @{
        ViewData["Title"] = "Edit";
        Layout = "";
         string nameCheck = "";
        }
        
    <div class="modal fade " id="detailsModal" tabindex="-1" aria-labelledby="detailsModallLabel" style="display: none;" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsModalLabel">Usuario</h5>
                    <button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close" id="editmodal"><svg class="svg-inline--fa fa-xmark fs--1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="xmark" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" data-fa-i2svg=""><path fill="currentColor" d="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z"></path></svg><!-- <span class="fas fa-times fs--1"></span> Font Awesome fontawesome.com --></button>
                </div>
                <div class="modal-body">
                    <form asp-action="Edit" id="FormModal" onsubmit="submitforms(event,'Edit' ,'FormModal')" class="mb-0">
                        <div class="row g-0 mt-0 mb-0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label class="form-control-label fs-0 subTitleModal text-900" asp-for="CodUsuario"></label>
                                                </div>
                                                <div class="col-8">
                                                        <input class="form-control" asp-for="CodUsuario" />
                                                    <span asp-validation-for="CodUsuario" class="text-danger k-invalid-msg" data-for="CodUsuario"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label class="form-control-label fs-0 subTitleModal text-900" asp-for="CodPersona"></label>
                                                </div>
                                                <div class="col-8">
                                                        <input class="form-control" asp-for="CodPersona" />
                                                    <span asp-validation-for="CodPersona" class="text-danger k-invalid-msg" data-for="CodPersona"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label class="form-control-label fs-0 subTitleModal text-900" asp-for="Clave"></label>
                                                </div>
                                                <div class="col-8">
                                                        <input class="form-control" asp-for="Clave" />
                                                    <span asp-validation-for="Clave" class="text-danger k-invalid-msg" data-for="Clave"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label asp-for="CodGrupo" class="form-control-label fs-0 subTitleModal"></label>
                                                </div>
                                                <div class="col-8">
                                                    <select asp-for="CodGrupo" class="form-control" asp-items="ViewBag.CodGrupo"></select>
                                                    <span asp-validation-for="CodGrupo" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label asp-for="CodEmpresa" class="form-control-label fs-0 subTitleModal"></label>
                                                </div>
                                                <div class="col-8">
                                                    <select asp-for="CodEmpresa" class="form-control" asp-items="ViewBag.CodEmpresa"></select>
                                                    <span asp-validation-for="CodEmpresa" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label asp-for="CodSucursal" class="form-control-label fs-0 subTitleModal"></label>
                                                </div>
                                                <div class="col-8">
                                                    <select asp-for="CodSucursal" class="form-control" asp-items="ViewBag.CodSucursal"></select>
                                                    <span asp-validation-for="CodSucursal" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal text-900" asp-for="Estado"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" hidden asp-for="Estado" id="Estado" />
                                    <div class="form-check fromCheckSelect">
                                        @{
                                            nameCheck = "Estado" + "_2";
                                        }
                                        @if (@Model.Estado == "A")
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('Estado')" checked="checked">
                                        }
                                        else
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('Estado')" />
                                        }
                                    </div>
                                    <span asp-validation-for="Estado" class="text-danger k-invalid-msg" data-for="EsFisica"></span>
                                </div>
                            </div>
                        </div>
                                    <input type="hidden" asp-for="CodArea" />
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label class="form-control-label fs-0 subTitleModal text-900" asp-for="CodCustodio"></label>
                                                </div>
                                                <div class="col-8">
                                                        <input class="form-control" asp-for="CodCustodio" />
                                                    <span asp-validation-for="CodCustodio" class="text-danger k-invalid-msg" data-for="CodCustodio"></span>
                                                </div>
                                            </div>
                                        </div>
                                    <input type="hidden" asp-for="CodColorRegistro" />
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label class="form-control-label fs-0 subTitleModal text-900" asp-for="AutorizaStock"></label>
                                                </div>
                                                <div class="col-8">
                                                        <input class="form-control" asp-for="AutorizaStock" />
                                                    <span asp-validation-for="AutorizaStock" class="text-danger k-invalid-msg" data-for="AutorizaStock"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4">
                                                    <label class="form-control-label fs-0 subTitleModal text-900" asp-for="AutorizaCtacte"></label>
                                                </div>
                                                <div class="col-8">
                                                        <input class="form-control" asp-for="AutorizaCtacte" />
                                                    <span asp-validation-for="AutorizaCtacte" class="text-danger k-invalid-msg" data-for="AutorizaCtacte"></span>
                                                </div>
                                            </div>
                                        </div>
                                    <input type="hidden" asp-for="EMail" />
                                    <input type="hidden" asp-for="FechaAlta" />
                                    <input type="hidden" asp-for="FechaBaja" />
                                    <input type="hidden" asp-for="IdTipoUsuario" />
                                    <input type="hidden" asp-for="CodOficina" />
                                    <input type="hidden" asp-for="Rowid" />
                            <div class="text-center" id="loader_inv" style="visibility: hidden;">
                                <div class="spinner-border" role="status">
                                    <span class="sr-only"></span>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btnAbm" type="submit">
                                    <span class="btn-label"><i class="fa fa-save"></i></span> Guardar
                                </button>
                                <button class="btnAbmCancelar" id="closededit" type="button" data-bs-dismiss="modal">
                                    <span class="btn-label"><i class="fa fa-remove"></i></span> Cancelar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

        @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
