@{
    Layout = "_Layout-Original";
}

<form class="was-validated" id="FormLogin" onsubmit="actualizarPassword(event)" style="background: #F0F3F4;">
    <div class="container">
        <div class="row flex-center min-vh-100 py-5">

            <div class="col-sm-10 col-md-8 col-lg-5 col-xl-5 col-xxl-3" style="background: #224683; border-radius: 5px">

                <div class="text-center mt-4">
                    <img src="../../../assets/img/logo.png" alt="phoenix" width="200" />
                </div>
 
                <div class="mb-3 text-start">
                    <label class="form-label" for="email" style="color: white !important;">Usuario</label>
                    <div class="form-icon-container">
                        <input class="form-control form-icon-input" id="usuario" value="@ViewBag.Usuario" name="usuario" type="text" readonly placeholder="Usuario" />
                        <input type="hidden" name="usuario" value="@ViewBag.Usuario" />
                        </div>


                </div>


                <div class="mb-3 text-start">
                    <label class="form-label" for="pass" style="color: white !important;">Nueva Contraseña</label>
                    <div class="form-icon-container">
                        <input class="form-control form-icon-input" name="pass" id="pass" type="password" placeholder="Nueva Contraseña" required oninput="validarPassword()" />
                        <span class="fas fa-key text-900 fs--1 form-icon"></span>
                    </div>
                    <div id="error-pass" class="text-danger small"></div>
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label" for="confirmarPass" style="color: white !important;">Confirmar Contraseña</label>
                    <div class="form-icon-container">
                        <input class="form-control form-icon-input" name="confirmarPass" id="confirmarPass" type="password" placeholder="Confirmar Contraseña" required oninput="validarPassword()" />
                        <span class="fas fa-key text-900 fs--1 form-icon"></span>
                    </div>
                    <div id="error-confirmar" class="text-danger small"></div>
                </div>
                @*<div class="row flex-between-center mb-7">
                <div class="col-auto">
                <div class="form-check mb-0">
                <input class="form-check-input" id="basic-checkbox" type="checkbox" checked="checked" />
                <label class="form-check-label mb-0" for="basic-checkbox">Recuérdame</label>
                </div>
                </div>
                </div>*@

                <div class="text-center mb-5" id="loader_login" style="visibility: hidden;">
                    <div class="spinner-border" role="status" style="border-right-color: white !important;">
                        <span class="sr-only"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button class="btnAbm mb-4" id="btnGuardar" type="submit" style="width: 80%;">Guardar</button>
                </div>
                <!-- <button class="btn btn-primary w-100 mb-3" type="submit" style="margin-bottom: 20px !important;">Ingresar</button> -->
                </div?>
            </div>
        </div>
</form>


<script src="~/js/ConfigPass.js"></script>