@model SistemaBase.ModelsCustom.AccesosGrupoCreateCustom



@{
    ViewData["Title"] = "Edit";
    Layout = "";
    string nameCheck;

}

<div class="modal fade " id="detailsModal" tabindex="-1" aria-labelledby="detailsModallLabel" style="display: none;" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Modificar Accesos Grupos</h5>
                <button class="btn p-1" type="button" data-bs-dismiss="modal" aria-label="Close" id="editmodal">
                    <svg class="svg-inline--fa fa-xmark fs--1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="xmark" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" data-fa-i2svg="">
                        <path fill="currentColor" d="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z"></path>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" id="FormModal" onsubmit="submitforms(event,'Edit' ,'FormModal')" class="mb-0">
                    <div class="row g-0 mt-0 mb-0">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label asp-for="CodGrupo" class="form-control-label fs-0 subTitleModal"></label>
                                </div>
                                <div class="col-8">
                                    <select asp-for="CodGrupo" class="form-control" asp-items="Model.GruposUsuarios"></select>
                                    <span asp-validation-for="CodGrupo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label asp-for="CodModulo" class="form-control-label fs-0 subTitleModal"></label>
                                </div>
                                <div class="col-8">
                                    <select asp-for="CodModulo" class="form-control" asp-items="Model.Modulos"></select>
                                    <span asp-validation-for="CodModulo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label asp-for="NomForma" class="form-control-label fs-0 subTitleModal"></label>
                                </div>
                                <div class="col-8">
                                    <select asp-for="NomForma" class="form-control" asp-items="Model.FormasCustom"></select>
                                    <span asp-validation-for="NomForma" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal" asp-for="PuedeInsertar"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" hidden asp-for="PuedeInsertar" id="PuedeInsertar" />
                                    <div class="form-check fromCheckSelect">
                                        @{ nameCheck = "PuedeInsertar" + "_2";}
                                        @if (@Model.PuedeInsertar == "S")
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('PuedeInsertar')" checked="checked">
                                        }
                                        else
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('PuedeInsertar')" />
                                        }
                                    </div>
                                    <span asp-validation-for="PuedeInsertar" class="text-danger k-invalid-msg" data-for="PuedeInsertar"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal" asp-for="PuedeBorrar"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" hidden asp-for="PuedeBorrar" id="PuedeBorrar" />
                                    <div class="form-check fromCheckSelect">
                                        @{ nameCheck = "PuedeBorrar" + "_2";}
                                        @if (@Model.PuedeBorrar == "S")
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('PuedeBorrar')" checked="checked">
                                        }
                                        else
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('PuedeBorrar')" />
                                        }
                                    </div>
                                    <span asp-validation-for="PuedeBorrar" class="text-danger k-invalid-msg" data-for="PuedeBorrar"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal" asp-for="PuedeActualizar"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" hidden asp-for="PuedeActualizar" id="PuedeActualizar" />
                                    <div class="form-check fromCheckSelect">
                                        @{ nameCheck = "PuedeActualizar" + "_2";}
                                        @if (@Model.PuedeActualizar == "S")
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('PuedeActualizar')" checked="checked">
                                        }
                                        else
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('PuedeActualizar')" />
                                        }
                                    </div>
                                    <span asp-validation-for="PuedeActualizar" class="text-danger k-invalid-msg" data-for="PuedeActualizar"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <label class="form-control-label fs-0 subTitleModal" asp-for="PuedeConsultar"></label>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" hidden asp-for="PuedeConsultar" id="PuedeConsultar" />
                                    <div class="form-check fromCheckSelect">
                                        @{ nameCheck = "PuedeConsultar" + "_2";}
                                        @if (@Model.PuedeConsultar == "S")
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('PuedeConsultar')" checked="checked">
                                        }
                                        else
                                        {
                                            <input class="form-check my_checkbox" type="checkbox" id="@nameCheck" onchange="verifyCheckbox('PuedeConsultar')" />
                                        }
                                    </div>
                                    <span asp-validation-for="PuedeConsultar" class="text-danger k-invalid-msg" data-for="PuedeConsultar"></span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="ItemMenu" />
                        <input type="hidden" asp-for="Rowid" />
                        <div class="text-center" id="loader_inv" style="visibility: hidden;">
                            <div class="spinner-border" role="status">
                                <span class="sr-only"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btnAbm" type="submit">
                                <span class="btn-label">
                                    <i class="fa fa-save"></i>
                                </span> Guardar
                            </button>
                            <button class="btnAbmCancelar" id="closededit" type="button" data-bs-dismiss="modal">
                                <span class="btn-label">
                                    <i class="fa fa-remove"></i>
                                </span> Cancelar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}