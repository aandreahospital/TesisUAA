@model SistemaBase.ModelsCustom.ForoComentario

@{
    ViewData["Title"] = "Index";
}
@section styles {
    <link rel="stylesheet" type="text/css" href="./css/cdn.datatables.net_1.13.6_css_jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="./css/cdn.jsdelivr.net_npm_sweetalert2@7.12.15_dist_sweetalert2.min.css">
}

<script src="~/js/jquery-3.7.0.js"></script>
<script src="~/js/jquery-3.6.0.min.js"></script>
<script src="~/js/jquery.datatables.min.js"></script>
<script src="~/js/cdnjs.cloudflare.com_ajax_libs_moment.js_2.29.4_moment.min.js"></script>
<script src="~/js/cdnjs.cloudflare.com_ajax_libs_sweetalert_2.1.2_sweetalert.min.js"></script>

<div>
    <div id="loader"></div>
    <p>
        <a class="d-none" id="detailsview" type="button" data-bs-toggle="modal" data-bs-target="#detailsModal"></a>
    </p>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="row">
                <div class="col-sm">
                    <h1 class="fw-bold text-primary">@Model.Titulo</h1>
                    <p class="text-muted">@Model.DescripcionForo</p>
                   
                 </div>
            </div>
                <div class="row">

                    <div class="col-sm">
                @if (!string.IsNullOrEmpty(Model.Adjunto))
                {
                    <button type="button" onclick="abrirAdjunto('@Model.IdForoDebate')">Ver Adjunto</button>
                }
                    </div>
            </div>
            <a class="btn btn-primary" onclick="abrirComentario(event)">
                <span class="btn-label"><i class="fa fa-plus"></i></span> Agregar Comentario
            </a>
        </div>
        <input id="IdForoDebate" type="hidden" class="form-control" asp-for="IdForoDebate" />

        <table class="table table-bordered table-striped">
            <thead >
                <tr>
                    <th>Usuario</th>
                    <th>Comentario</th>
                    <th>Fecha Comentario</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Comentarios != null && Model.Comentarios.Any())
                {
                    @foreach (var exp in Model.Comentarios)
                    {
                        <tr>
                            <td>@exp.CodUsuario</td>
                            <td>@exp.Descripcion</td>
                            <td>@exp.FechaComentario</td>
                            <td>
                                <a onclick="AbrirEditLab(@exp.IdComentario)" class="btn btn-warning btn-sm">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                @* <a asp-action="DeleteComentario" asp-route-id="@exp.IdComentario" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar este registro?');">
                                    <i class="fa fa-trash"></i>
                                </a> *@
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No hay registros de comentarios</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
 </div>
<div id="details"></div>
<script src="~/js/Comentarios.js"></script>
<script>
    function AbrirAdjunto(IdForoDebate) {
        // Redirige a la acción del controlador para abrir el PDF en una nueva ventana o pestaña
        window.open('@Url.Action("AbrirPDF", "ComentarioForo")?IdForoDebate=' + IdForoDebate, '_blank');
    }
</script>