@model SistemaBase.Models.Persona

@{
    ViewData["Title"] = "Importación masiva de Graduados";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="./css/cdn.datatables.net_1.13.6_css_jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="./css/cdn.jsdelivr.net_npm_sweetalert2@7.12.15_dist_sweetalert2.min.css">
}
<style>
    .fila-error {
        background-color: #f8d7da !important;
        color: #721c24 !important;
    }
</style>
<script src="~/js/jquery-3.7.0.js"></script>
<script src="~/js/jquery.datatables.min.js"></script>
<script src="~/js/cdnjs.cloudflare.com_ajax_libs_moment.js_2.29.4_moment.min.js"></script>
<script src="~/js/cdnjs.cloudflare.com_ajax_libs_sweetalert_2.1.2_sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>


<h2 class="text-rigth mb-4">Importación Masiva de Graduados</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-rigth mb-3">
            <a href="@Url.Action("FormatoBase", "AutoCarga")" class="btn btn-success">
                Descargar Formato Base <i class="fa fa-file-excel"></i>
            </a>
        </div>
    </div>
    <br />
 
    <div class="row justify-content-rigth">
        <h4 class="text-rigth mb-4">Seleccione un archivo Excel (.xlsx):</h4>
        <div class="col-md-6">
            <div class="form-group text-rigth">
                <input type="file" id="archivoExcel" class="form-control" accept=".xlsx" required />
            </div>
        </div>
        <div class="col-md-2">
            <button id="btnCargar" class="btn btn-primary w-100">Cargar</button>
        </div>
    </div>

    <div class="row text-rigth mt-3">
                            <label class="form-control-label fs-0 subTitleModal ">Carrera</label>
                            <div class="dropup">
                                <select id="Idcarrera" class="form-select" data-choices="data-choices" single="single" data-options='{"removeItemButton":true,"placeholder":true}' asp-items="ViewBag.Carrera" required>
                                </select>
                            </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h4 class="text-rigth">Datos Cargados</h4>
            <table id="tablaAlumnos" class="table table-striped table-bordered" style="width:100%">
                <thead class="table">
                    <tr>
                        <th>CodPersona</th>
                        <th>Nombre</th>
                        <th>Sexo</th>
                        <th>FechaNacimiento</th>
                        <th>EstadoCivil</th>
                        <th>Email</th>
                        <th>Clave</th>
                        <th>CodGrupo</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-rigth mt-4">
        <button id="btnProcesar" class="btn btn-success w-50" disabled> Procesar Datos</button>
    </div>
</div>

<script src="~/js/cargaExcel.js"></script>
